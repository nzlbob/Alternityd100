<form style="width:2000px font-family: serpentine; ">
 
   <div class="form-group">
    <label    style="font-size: 125% " >Damage: {{formula}} {{localize defenceData.dmgtype}} ({{type}}) ({{firepower}}) </label>
    
  </div>
<table style="width:100%">
  <tr>
    <th style="width:50%" >  
      <div class="form-group">
    <label>Damage</label>
    <input type="text" name="damage" value="{{damage}}" enabled/>
    </div>
  </th>
  <th>

<div class="form-group" data-tippy-content="{{ localize "d100A.Items.Weapon.firepowerTooltip" }}">
    <label>{{ localize "d100A.Items.Type" }}</label>
  
    <select style="font-family: serpentine;" name="type">
    {{#select type}}
    {{#each d100A.damagetype as |name type|}}
    <option style="font-family: serpentine;" value="{{type}}">{{name}}</option>
    {{/each}}
    {{/select}}
    </select>
    </div>  



  </th>
  </tr>


<tr>
    <th>  
      <div class="form-group" data-tippy-content="{{ localize "d100A.Items.Weapon.dmgtypeTooltip" }}">
    <label>{{ localize "d100A.Items.dmgtype" }}</label>
    <select style="font-family: serpentine;" name="dmgtype">
    {{#select defenceData.dmgtype}}
    {{#each d100A.damageQ as |name dmgtype|}}
    <option style="font-family: serpentine;" value="{{dmgtype}}">{{name}}</option>
    {{/each}}
    {{/select}}
    </select>
    </div> 
 
  </th>
  <th>
    {{#if (not tokenData.isSpaceActor) }}
      <div class="form-group" data-tippy-content="{{ localize "d100A.Items.Weapon.firepowerTooltip" }}">
      <label>{{ localize "d100A.Items.Firepower" }}</label>
      <select style="font-family: serpentine;" name="firepower">
      {{#select firepower}}
        {{#each d100A.firepower as |name firepower|}} 
          <option style="font-family: serpentine;" value="{{firepower}}">{{name}}</option>
        {{/each}}
      {{/select}}
      </select>
      </div>  
    {{/if}}
    
    {{#if tokenData.isSpaceActor }}
      <div class="form-group" data-tippy-content="{{ localize "d100A.Items.Weapon.firepowerTooltip" }}">
      <label>{{ localize "d100A.Items.Firepower" }}</label>
      <select style="font-family: serpentine;" name="firepower">
      {{#select firepower}}
        {{#each d100A.starshipFirepowerDial as |name firepower|}} 
          <option style="font-family: serpentine;" value="{{firepower}}">{{name}}</option>
        {{/each}}
      {{/select}}
      </select>
      </div>  
    {{/if}}
  </th>
  </tr>


</table>
 <ol></ol>
  {{#each defenceData.armor as |armor index|}}
    <li style="font-family: serpentine;"> {{armor.name}}</li>
    {{/each}}


</ol>

  <div class="form-group">
    <label>RollMode</label>
    <select name="rollMode" style="font-family: serpentine;">
      {{#select rollMode}}
      {{#each rollModes as |label mode|}}
      <option style="font-family: serpentine;" value="{{mode}}"><span style="font-family: serpentine;">{{localize label}}</span></option>
      {{/each}}
      {{/select}}
    </select>
  </div>
   <div class="form-group">

    </div>
    
</form>
