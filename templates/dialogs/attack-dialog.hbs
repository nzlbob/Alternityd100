<form style="width:2000px font-family: serpentine; ">
  {{console "Attack Dialog 2"}}
  {{console this}}
  <label>Skill: {{skl.label }} {{#if (not isStarshipweapon)}} {{skl.base}}/{{skl.good}}/{{skl.amazing}} {{skl.stepdie}}
    {{/if}} </label>

  <div class="form-group">
    <label>Base Roll</label>
    <input type="text" name="formula" value="{{formula}}" disabled />
  </div>
  <div class="form-group">
    <label>Difficulty Steps</label>
    <select name="dstep" style="font-family: serpentine;">
      {{#select step}}
      <!-- {{#each steps as |label stp|}}
      <option style="font-family: serpentine;"  {{#if null}} selected {{/if}} value="{{stp}}"><span style="font-family: serpentine;">{{localize label}}</span></option>
      {{/each}}

Done like this because selecting the 5th item is hard :-(

      -->
      <option style="font-family: serpentine;" value="-5"><span style="font-family: serpentine;">-5 steps No
          Sweat</span></option>
      <option style="font-family: serpentine;" value="-4"><span style="font-family: serpentine;">-4 steps
          Cakewalk</span></option>
      <option style="font-family: serpentine;" value="-3"><span style="font-family: serpentine;">-3 steps Extremely
          Easy</span></option>
      <option style="font-family: serpentine;" value="-2"><span style="font-family: serpentine;">-2 steps Very
          Easy</span></option>
      <option style="font-family: serpentine;" value="-1"><span style="font-family: serpentine;">-1 steps Easy</span>
      </option>
      <option style="font-family: serpentine;" selected value="0"><span style="font-family: serpentine;">0 steps
          Average</span></option>
      <option style="font-family: serpentine;" value="1"><span style="font-family: serpentine;">+1 steps Tough</span>
      </option>
      <option style="font-family: serpentine;" value="2"><span style="font-family: serpentine;">+2 steps Hard</span>
      </option>
      <option style="font-family: serpentine;" value="3"><span style="font-family: serpentine;">+3 steps
          Challenging</span></option>
      <option style="font-family: serpentine;" value="4"><span style="font-family: serpentine;">+4 steps
          Formidable</span></option>
      <option style="font-family: serpentine;" value="5"><span style="font-family: serpentine;">+5 steps Grueling</span>
      </option>
      <option style="font-family: serpentine;" value="6"><span style="font-family: serpentine;">+6 steps
          Gargantuan</span></option>
      <option style="font-family: serpentine;" value="7"><span style="font-family: serpentine;">+7 steps Leroy
          Jenkins</span></option>


      {{/select}}
    </select>
  </div>

      
        <div class="form-group" data-tooltip="{{ localize "d100A.Items.Weapon.movementTooltip" }}">
          <label>{{ localize "Movement" }}</label>
          <select style="font-family: serpentine;" name="movement">
           
             {{selectOptions d100A.movementType selected=movement}}


          </select>
        </div>



      
  {{#if isStarshipweapon}}
  <div class="form-group"  >
    <label>Weapons Operator</label>
    <select name="operator" style="font-family: serpentine;">
      {{console "Attack dia 43"}}
      {{console validgunner}}
      {{#select operator}}
      {{#each validgunner as |actor nbr|}}

      <option style="font-family: serpentine;" value="{{nbr}}">{{actor.name}}
        ({{actor.system.skills.weapo.base}}/{{actor.system.skills.weapo.good}}/{{actor.system.skills.weapo.amazing}})
        {{actor.system.skills.weapo.stepdie}}


      </option>
      {{/each}}

      {{/select}}
    </select>

  </div>



  {{/if}}


  <table style="width:99%" style="font-size: 10px;" >
    <thead>
      <tr style="font-size: 13px;">
        <th>
          Target
        </th>
        <th data-tooltip="{{ localize "d100A.Items.Weapon.rangeTooltip" }}" >
          Range
        </th>
        <th data-tooltip="{{ localize "d100A.Items.Weapon.resistanceTooltip" }}">
          Res
        </th>
        <th data-tooltip="{{ localize "d100A.Items.Weapon.coverTooltip" }}">
          Cover
        </th>
        <th data-tooltip="{{ localize "d100A.Items.Weapon.dodgeTooltip" }}">
          Dodge
        </th>
      </tr>

    </thead>
    <tbody>
      {{#each targetData as |target id|}}
      <tr style="font-size: 11px; height: 16px" >
        <td>
          {{target.Name}}
        </td>
        <td>
          <div class="form-group">
            <select style="font-family: serpentine;" name="range{{id}}">
              {{selectOptions ../d100A.itemAttack.range selected=target.rangecat }}
              
            </select>
          </div>
        </td>
        <td>
          <div class="form-group" >
            <select style="font-family: serpentine;" name="resistance{{id}}">
              {{selectOptions ../d100A.resistanceType selected=target.resistance }}
              

            </select>
          </div>
        </td>
        <td>
          <div class="form-group" >
            <select style="font-family: serpentine;" name="cover{{id}}">
             
               {{selectOptions ../d100A.coverType selected=target.cover }}

            </select>
          </div>
        </td>
        <td>
          <div class="form-group" >
            <select style="font-family: serpentine;" name="dodge{{id}}">

               {{selectOptions ../d100A.dodgeType selected=target.dodge }} 
              
            </select>
          </div>
        </td>

      </tr>
      {{/each}}
    </tbody>
  </table>


  
  <ol></ol>
  {{#each defenceData.armor as |armor index|}}
  <li style="font-family: serpentine;"> {{armor.name}}</li>
  {{/each}}


  </ol>

  <div class="form-group">
    <label>RollMode</label>
    <select name="rollMode" style="font-family: serpentine;">
     
      {{selectOptions rollModes selected=rollMode localize=true }} 


    </select>
  </div>
  <div class="form-group">

  </div>

</form>