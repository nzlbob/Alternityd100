{{#if formula}}
<div class="dice-roll">
  <div class="dice-result">
      <h4 class="dice-total{{#if isNat20}} natural-20{{/if}}{{#if isCrit}} critical-threat success{{/if}}{{#if isFumble}} failure{{/if}}">{{total}}</h4>
      {{{tooltip}}}
  </div>
</div>


{{/if}}




{{#if hasExtraText}}
<div class="extra-text gm-sensitive">{{{extraText}}}</div>
{{/if}}

{{#if hasProperties}}
{{#each properties as |prop|}}
<div class="flexcol property-group gm-sensitive general-notes">
  <label>{{prop.header}}</label>
  <div class="flexrow">
    {{#each prop.value as |v|}}
    <span class="tag">{{{v}}}</span>
    {{/each}}
  </div>
</div>
{{/each}}
{{/if}}
